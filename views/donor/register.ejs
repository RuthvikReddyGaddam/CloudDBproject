<% layout('layouts/boilerplate')%>

<div class="container col-md-6">
  <div class="card my-3">
  <h1 class="text-center mt-3">Register as a Donor</h1>
    <div class="card-body">
      <p class="card-text">
        
  <form action="/donor/register" method="POST" > 
    <div class="form-group">
      <label for="gender">Gender</label>
      <select name="gender" id="gender" class="form-control">
        <option value="male">male</option>
        <option value="female">female</option>
      </select>
    </div>
    <br>
    <div class="form-group">
      <label for="weight">Weight in lbs</label>
      <input type="number" name="weight" min="110" max="300" class="form-control" placeholder="Select weight in lbs"/> 
    </div>
<br>
    <div class="form-group">
      <label for="height" clas>Height in cm</label><br>
      <input type="number" name="height" min="150" max="275" class="form-control"/>
      
    </div>
    <br>
    <div class="form-group">
    <label for="bloodGroup">Blood Group</label>
    <select name="bloodGroup" id="bloodGroup" class="form-control">
      <option value="A+">A+</option>
      <option value="A-">A-</option>
      <option value="B+">B+</option>
      <option value="B-">B-</option>
      <option value="O+">O+</option>
      <option value="O-">O-</option>
      <option value="AB+">AB+</option>
      <option value="AB-">AB-</option>
    </select>
  </div>
  <br>
  <div class="form-group">
    <label for="DoB" class="form-label">Select your Birthday</label>
        <input type="date" name="DoB" id="DoB" class="form-control">

  </div>
  <br>
  <div class="form-group">
    <label for="previousHealthIssues">Previous Health Issues</label>
    <select name="previousHealthIssues" id="previousHealthIssues" class="form-control">
        <option value="YES">YES</option>
        <option value="NO">NO</option>
    </select>
  </div>
<br>
<br>
<div class="form-group">
  <div>Previous History of: </div>
    <label for="smoking">Smoking</label>
    <select name="smoking" id="smoking" class="form-control">
        <option value="YES">YES</option>
        <option value="NO">NO</option>
    </select>
<br>
    <label for="Drinking">Drinking</label>
    <select name="Drinking" id="Drinking" class="form-control">
        <option value="YES">YES</option>
        <option value="NO">NO</option>
    </select>
</div>
  
<br>
<div class="pt-1 mb-4">
  <button class="btn btn-dark btn-lg btn-block col-md-12" type="submit">Register as a Donor</button>
</div>
  </form>
      </p>
      </div>
  </div>


</div>


