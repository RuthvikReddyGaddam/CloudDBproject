<% layout('layouts/boilerplate')%>

<section class="h-100 gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-9 col-xl-7">
          <div class="card">
            <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
              <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                <img src="<%=data[0].imageUrl%>"
                  alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                  style="width: 150px; z-index: 1">
                  
                
              </div>
              <div class="ms-3" style="margin-top: 130px;">
                <h5><%=data[0].firstName%> <%=data[0].lastName%></h5>
                <p><%=data[0].city%></p>
              </div>
            </div>
                <form action="/profile/delete/<%=data[0].userID%>?_method=DELETE" method="post"><button type="submit" class="btn btn-outline-dark mt-5 ms-4" >  
                    Delete  profile
                  </button></form>
            
            
            <div class="card-body p-4 text-black">
              <div class="mb-5">
                <p class="lead fw-normal mb-1">About</p>
                <div class="p-4" style="background-color: #f8f9fa;">
                  <p class="font-italic mb-1">Email: <%=data[0].email%></p>
                  <p class="font-italic mb-1">Address: <%=data[0].address%></p>
                  <p class="font-italic mb-0"><%=data[0].city%>, <%=data[0].state%>. <%=data[0].pincode%></p>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">Your posts</p>
              </div>

              <%if(post.length == 0){%>
              <p>You have no posts</p>
                <%}else{%>
              <%for(let i = 0; i<post.length; i++){%>
                <div class="mt-4">  
                    <div class="card">
                        
                        <div class="card-body">
                          <div class="card-text"><h5><a style="all: unset;" href="/requests/<%=post[i].postID%>"><%=post[i].title%></a></h5>
                            <p><%=post[i].postData%> </p>
                        </div class="btn-group"> 
  
                          
                            <div class="btn-group">
                             
                              <a href="requests/<%=data[i].postID%>" class="btn btn-sm btn-outline-secondary">View</a>
                              <a href="requests/<%=data[i].postID%>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                              <form
                              action="/requests/<%=post[i].postID%>%>?_method=DELETE"
                              method="post" class="mx-2"
                            >
                              <button class="btn btn-danger">Delete Post</button>
                            </form>
                            </div>
                        </div>
                      </div>
                      </div>
                      
                   
              <%}%>
              <%}%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
